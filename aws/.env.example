# CommerceTools AWS Integration Configuration

# Project Settings
PROJECT_NAME=commercetools-integration
ENVIRONMENT=dev
CTP_PROJECT_KEY=n8n-ct-integration

# AWS Settings
AWS_REGION=us-east-1
STACK_NAME=${PROJECT_NAME}-${ENVIRONMENT}-stack

# Lambda Settings
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY=512
LAMBDA_RUNTIME=nodejs18.x

# SQS Settings
SQS_VISIBILITY_TIMEOUT=300
SQS_MESSAGE_RETENTION_PERIOD=1209600
SQS_MAX_RECEIVE_COUNT=3

# Notification Settings
# Set these to enable additional integrations
#WEBHOOK_URL=https://your-webhook-endpoint.com/commercetools
#SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Development Settings
ENABLE_DEBUG_LOGS=true
LOG_RETENTION_DAYS=30

# Production Settings (uncomment for production)
#ENVIRONMENT=prod
#LAMBDA_MEMORY=1024
#LOG_RETENTION_DAYS=90
#ENABLE_DEBUG_LOGS=false